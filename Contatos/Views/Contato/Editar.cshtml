@model Contatos.Models.Contato
@{
    ViewData["Title"] = "Editar Contato";
}

<h1>Editar</h1>
<h2>Contato</h2>
<h3>@Model.Perfil</h3>
<hr />
<form class="row g-3" asp-action="Editar" method="post">

      <div class="form-group col-md-6">
           <label for="inputState" class="form-label">Perfil</label>
        <input class="form-control" name="perfil" value="@Model.Perfil">
      </div>
      <div class="col-md-4">
        <label for="inputState" class="form-label">Tipo</label>
        <select id="inputState" class="form-select" name="tipo">
          <option selected>@Model.Tipo</option>
            @{string[] redes = { "Instagram", "Facebook", "Twiter", "Email", "Celular", "Telefone Fixo" };}
            @for(int i = 0; i < 6; i++)
            {
                @if(redes[i] != Model.Tipo)
                {
                    <option>@redes[i]</option>
                }
            }
        </select>
      </div>
      <div class="col-md-12" >
           <input type="submit" value="Alterar Contato" class="btn btn-primary" asp-route-idContato="@Model.Id" asp-route-idCliente="@Model.IdCliente"/>
      </div>
</form>
<br />

<div>
     <a class="btn btn-primary" asp-action="Index" asp-route-id="@Model.IdCliente">Voltar</a>
</div>

